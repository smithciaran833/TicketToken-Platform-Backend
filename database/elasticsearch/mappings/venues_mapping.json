{
  "settings": {
    "number_of_shards": 2,
    "number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "venue_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "stop", "snowball"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "venueId": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          },
          "suggest": {
            "type": "completion",
            "analyzer": "simple",
            "preserve_separators": true,
            "preserve_position_increments": true,
            "max_input_length": 50
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "standard": {
            "type": "text",
            "analyzer": "standard"
          }
        }
      },
      "type": {
        "type": "keyword"
      },
      "address": {
        "properties": {
          "street": {
            "type": "text"
          },
          "city": {
            "type": "keyword",
            "fields": {
              "text": {
                "type": "text"
              }
            }
          },
          "state": {
            "type": "keyword"
          },
          "zipCode": {
            "type": "keyword"
          },
          "country": {
            "type": "keyword"
          },
          "fullAddress": {
            "type": "text",
            "analyzer": "standard"
          }
        }
      },
      "location": {
        "type": "geo_point"
      },
      "timezone": {
        "type": "keyword"
      },
      "capacity": {
        "type": "integer"
      },
      "sections": {
        "type": "nested",
        "properties": {
          "sectionId": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "capacity": {
            "type": "integer"
          },
          "type": {
            "type": "keyword"
          },
          "pricing": {
            "type": "scaled_float",
            "scaling_factor": 100
          }
        }
      },
      "amenities": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text"
          }
        }
      },
      "accessibilityFeatures": {
        "type": "keyword"
      },
      "images": {
        "type": "nested",
        "properties": {
          "url": {
            "type": "keyword",
            "index": false
          },
          "type": {
            "type": "keyword"
          },
          "caption": {
            "type": "text"
          },
          "primary": {
            "type": "boolean"
          }
        }
      },
      "ratings": {
        "properties": {
          "averageRating": {
            "type": "half_float"
          },
          "totalReviews": {
            "type": "integer"
          },
          "categories": {
            "properties": {
              "accessibility": {
                "type": "half_float"
              },
              "sound": {
                "type": "half_float"
              },
              "parking": {
                "type": "half_float"
              },
              "concessions": {
                "type": "half_float"
              },
              "sightlines": {
                "type": "half_float"
              }
            }
          }
        }
      },
      "contact": {
        "properties": {
          "phone": {
            "type": "keyword"
          },
          "email": {
            "type": "keyword"
          },
          "website": {
            "type": "keyword",
            "index": false
          },
          "boxOfficePhone": {
            "type": "keyword"
          }
        }
      },
      "operatingHours": {
        "type": "object",
        "enabled": false
      },
      "parkingInfo": {
        "properties": {
          "onsite": {
            "type": "boolean"
          },
          "capacity": {
            "type": "integer"
          },
          "pricing": {
            "type": "scaled_float",
            "scaling_factor": 100
          },
          "valet": {
            "type": "boolean"
          }
        }
      },
      "policies": {
        "properties": {
          "ageRestrictions": {
            "type": "text"
          },
          "bagPolicy": {
            "type": "text"
          },
          "smokingPolicy": {
            "type": "keyword"
          }
        }
      },
      "metadata": {
        "properties": {
          "createdAt": {
            "type": "date"
          },
          "updatedAt": {
            "type": "date"
          },
          "lastVerified": {
            "type": "date"
          },
          "source": {
            "type": "keyword"
          }
        }
      },
      "status": {
        "type": "keyword"
      },
      "featured": {
        "type": "boolean"
      },
      "searchBoost": {
        "type": "float"
      }
    }
  }
}
