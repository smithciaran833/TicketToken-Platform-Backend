{
  "name": "@tickettoken/sdk-javascript",
  "version": "1.0.0",
  "description": "Official JavaScript SDK for TicketToken API - Browser and Node.js compatible",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:umd && npm run build:types",
    "build:esm": "rollup -c rollup.config.js --format esm --file dist/index.esm.js",
    "build:cjs": "rollup -c rollup.config.js --format cjs --file dist/index.js",
    "build:umd": "rollup -c rollup.config.js --format umd --name TicketToken --file dist/index.umd.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tickettoken",
    "api",
    "sdk",
    "javascript",
    "browser",
    "nodejs",
    "tickets",
    "events",
    "nft"
  ],
  "author": "TicketToken",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tickettoken/tickettoken-platform.git",
    "directory": "packages/sdk-javascript"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
