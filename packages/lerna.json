{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "ignoreChanges": [
        "*.md",
        "*.test.ts",
        "*.test.tsx",
        "*.spec.ts",
        "*.spec.tsx"
      ]
    },
    "version": {
      "allowBranch": ["main", "develop"],
      "message": "chore(release): version %s"
    }
  },
  "useWorkspaces": true,
  "packages": [
    "sdk-typescript",
    "sdk-javascript",
    "sdk-react",
    "sdk-test-utils",
    "shared"
  ]
}
