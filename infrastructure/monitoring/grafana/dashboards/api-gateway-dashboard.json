{
  "dashboard": {
    "title": "API Gateway - Production Monitoring",
    "tags": ["api-gateway", "production", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"api-gateway\"}[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "Requests/sec",
              "axisPlacement": "auto"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Response Time (p50, p95, p99)",
        "type": "graph",
        "gridPos": { "x": 8, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": { "x": 16, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"api-gateway\",status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{service=\"api-gateway\"}[5m])) * 100",
            "legendFormat": "5xx Error Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{service=\"api-gateway\",status_code=~\"4..\"}[5m])) / sum(rate(http_requests_total{service=\"api-gateway\"}[5m])) * 100",
            "legendFormat": "4xx Error Rate",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "circuit_breaker_state{service=\"api-gateway\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "0", "text": "CLOSED" },
              { "type": "value", "value": "1", "text": "OPEN" },
              { "type": "value", "value": "2", "text": "HALF-OPEN" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "red" },
                { "value": 2, "color": "yellow" }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 5,
        "title": "Authentication Success Rate",
        "type": "gauge",
        "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(auth_attempts_total{service=\"api-gateway\",status=\"success\"}[5m])) / sum(rate(auth_attempts_total{service=\"api-gateway\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 90, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "active_connections{service=\"api-gateway\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 800, "color": "yellow" },
                { "value": 1000, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 18, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "memory_usage_bytes{service=\"api-gateway\",type=\"heapUsed\"} / 1024 / 1024",
            "legendFormat": "Heap Used (MB)",
            "refId": "A"
          },
          {
            "expr": "memory_usage_bytes{service=\"api-gateway\",type=\"rss\"} / 1024 / 1024",
            "legendFormat": "RSS (MB)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes"
          }
        }
      },
      {
        "id": 8,
        "title": "Circuit Breaker Failures by Service",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(circuit_breaker_failures_total{service=\"api-gateway\"}[5m])",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 9,
        "title": "Downstream Service Latency",
        "type": "graph",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(downstream_request_duration_seconds_bucket{service=\"api-gateway\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} p95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 10,
        "title": "Security Violations",
        "type": "stat",
        "gridPos": { "x": 0, "y": 20, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(security_violations_total{service=\"api-gateway\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 11,
        "title": "Cross-Tenant Access Attempts",
        "type": "stat",
        "gridPos": { "x": 8, "y": 20, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(cross_tenant_attempts_total{service=\"api-gateway\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 12,
        "title": "Rate Limit Exceeded",
        "type": "stat",
        "gridPos": { "x": 16, "y": 20, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(rate_limit_exceeded_total{service=\"api-gateway\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 1000, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(cache_hits_total{service=\"api-gateway\"}[5m])) / (sum(rate(cache_hits_total{service=\"api-gateway\"}[5m])) + sum(rate(cache_misses_total{service=\"api-gateway\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 50, "color": "yellow" },
                { "value": 80, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "JWT Validation Errors",
        "type": "graph",
        "gridPos": { "x": 6, "y": 24, "w": 9, "h": 4 },
        "targets": [
          {
            "expr": "rate(jwt_validation_errors_total{service=\"api-gateway\"}[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 15,
        "title": "Event Loop Lag",
        "type": "graph",
        "gridPos": { "x": 15, "y": 24, "w": 9, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(event_loop_lag_seconds_bucket{service=\"api-gateway\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.05, "color": "yellow" },
                { "value": 0.1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 16,
        "title": "Health Check Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 28, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "health_check_status{service=\"api-gateway\"}",
            "legendFormat": "{{check_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "1", "text": "Healthy" },
              { "type": "value", "value": "0", "text": "Unhealthy" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 17,
        "title": "Top 10 Endpoints by Request Count",
        "type": "table",
        "gridPos": { "x": 8, "y": 28, "w": 16, "h": 4 },
        "targets": [
          {
            "expr": "topk(10, sum by (route, method) (rate(http_requests_total{service=\"api-gateway\"}[5m])))",
            "refId": "A",
            "format": "table"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(http_requests_total{service=\"api-gateway\"}, environment)",
          "current": {
            "text": "production",
            "value": "production"
          }
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
