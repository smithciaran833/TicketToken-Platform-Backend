{
  "dashboard": {
    "id": null,
    "title": "WP-14 TicketToken Platform Metrics",
    "tags": ["tickettoken", "wp14"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (job, le))",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Orders Created",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(increase(orders_created_total[1h]))"
          }
        ]
      },
      {
        "id": 4,
        "title": "Payments Processed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "sum(increase(payments_processed_total[1h]))"
          }
        ]
      },
      {
        "id": 5,
        "title": "Mints Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(increase(mints_succeeded_total[1h]))"
          }
        ]
      },
      {
        "id": 6,
        "title": "Scans Allowed vs Denied",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "sum(increase(scans_allowed_total[1h]))"
          }
        ]
      },
      {
        "id": 7,
        "title": "Queue Depth",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "queue_depth",
            "legendFormat": "{{queue}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Service Health",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "up",
            "format": "table",
            "instant": true
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
