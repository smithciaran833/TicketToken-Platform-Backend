{
  "name": "@tickettoken/search-service",
  "version": "1.0.0",
  "description": "Professional search service for TicketToken platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:load": "artillery run tests/load/search-load-test.js",
    "test:stress": "artillery run tests/load/stress-test.js",
    "test:perf": "artillery run tests/load/search-load-test.js --output test-results/load-test-report.json",
    "lint": "eslint src --ext .ts",
    "index:create": "tsx src/scripts/create-indices.ts",
    "index:sync": "tsx src/scripts/sync-data.ts",
    "index:optimize": "tsx src/scripts/optimize-indices.ts",
    "sync-content": "tsx src/scripts/sync-content.ts",
    "monitor": "tsx src/scripts/monitor-health.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile knexfile.ts -x ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.19.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^8.1.1",
    "@tickettoken/shared": "file:../../shared",
    "amqplib": "^0.10.9",
    "awilix": "^9.0.0",
    "dotenv": "^16.6.1",
    "fastify": "^4.24.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "mongoose": "^8.0.3",
    "pg": "^8.16.3",
    "pino": "^8.21.0",
    "pino-pretty": "^10.2.0",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "types": "dist/server.d.ts"
}
