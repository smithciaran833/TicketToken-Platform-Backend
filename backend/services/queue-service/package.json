    "@fastify/helmet": "^12.0.1",
    "@metaplex-foundation/js": "^0.19.4",
    "@metaplex-foundation/mpl-token-metadata": "^2.13.0",
    "@solana/web3.js": "^1.87.6",
    "@tickettoken/shared": "file:../../shared",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "bs58": "^5.0.0",
    "bull": "^4.16.5",
    "dotenv": "^16.6.1",
    "fastify": "^5.6.1",
    "ioredis": "^5.3.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
