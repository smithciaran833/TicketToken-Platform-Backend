    "@types/bcryptjs": "^2.4.6",
    "@types/bs58": "^4.0.4",
    "@types/bull": "^4.10.0",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@types/stripe": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
