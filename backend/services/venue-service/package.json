{
  "name": "@tickettoken/venue-service",
  "version": "1.0.0",
  "description": "Venue management service for TicketToken platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:status": "knex migrate:status",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit --passWithNoTests",
    "test:integration": "jest --config tests/integration/jest.config.js",
    "test:e2e": "jest tests/e2e --passWithNoTests --runInBand",
    "test:contract": "jest tests/contract --passWithNoTests",
    "test:security": "jest tests/security --passWithNoTests --runInBand",
    "test:chaos": "jest tests/chaos --passWithNoTests --runInBand",
    "test:load": "k6 run tests/load/venue.load.test.js",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "seed:dev": "ts-node scripts/seed-dev.ts",
    "prepare": "cd ../../.. && husky install backend/services/venue-service/.husky"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^8.1.1",
    "@fastify/swagger": "^8.11.0",
    "@fastify/swagger-ui": "^1.10.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-fastify": "^0.48.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/instrumentation-knex": "^0.48.0",
    "@opentelemetry/instrumentation-redis-4": "^0.48.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@tickettoken/shared": "file:../../shared",
    "amqplib": "^0.10.9",
    "awilix": "^9.0.0",
    "axios": "^1.11.0",
    "dotenv": "^16.6.1",
    "envalid": "^8.1.1",
    "fastify": "^4.24.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "knex": "^3.0.1",
    "mongoose": "^8.0.3",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^8.21.0",
    "pino-pretty": "^10.2.0",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2",
    "stripe": "^20.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^11.11.0",
    "@testcontainers/postgresql": "^11.5.1",
    "@testcontainers/redis": "^11.5.1",
    "@types/amqplib": "^0.10.7",
    "@types/axios": "^0.9.36",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/knex": "^0.15.2",
    "@types/node": "^20.19.11",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "ajv": "^8.12.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^3.14.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "types": "dist/index.d.ts"
}
