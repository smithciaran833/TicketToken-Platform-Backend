{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "../../../node_modules/@types"]
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "../../shared/src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
