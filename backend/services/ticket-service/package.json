{
  "name": "tickettoken-ticket-service",
  "version": "1.0.0",
  "description": "Ticket management service for TicketToken - handles ticket lifecycle, NFT minting, and validations",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node migrate.js",
    "setup:dev": "./setup-dev.sh",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@metaplex-foundation/mpl-bubblegum": "^3.0.0",
    "@project-serum/anchor": "^0.26.0",
    "@solana/web3.js": "^1.98.4",
    "@tickettoken/shared": "file:../../shared",
    "amqplib": "^0.10.9",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.14.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^3.0.0",
    "redis": "^5.8.2",
    "redlock": "^5.0.0-beta.2",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.10",
    "@types/pdfkit": "^0.13.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/redlock": "^4.0.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "types": "dist/index.d.ts"
}
