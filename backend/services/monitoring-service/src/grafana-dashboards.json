{
  "dashboard": {
    "title": "TicketToken Platform Metrics",
    "panels": [
      {
        "title": "Revenue Overview",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(revenue_total_cents[5m])) by (venue_id)",
            "legendFormat": "Venue {{venue_id}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "title": "Tickets Sold (Real-time)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(tickets_sold_total[1h]))",
            "legendFormat": "Tickets/hour"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
      },
      {
        "title": "Active Users",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(active_users)",
            "legendFormat": "Users"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
      },
      {
        "title": "Payment Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(payment_success_total[5m]) / (rate(payment_success_total[5m]) + rate(payment_failure_total[5m])) * 100",
            "legendFormat": "Success %"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
      },
      {
        "title": "API Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "p95 latency"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(errors_total[5m])) by (severity)",
            "legendFormat": "{{severity}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
      },
      {
        "title": "Database Query Performance",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(db_query_duration_ms_bucket[5m])) by (le)",
            "format": "heatmap"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "title": "Marketplace Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(tickets_listed_total[5m]))",
            "legendFormat": "New Listings"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 }
      },
      {
        "title": "Solana Network Health",
        "type": "stat",
        "targets": [
          {
            "expr": "1 - (rate(solana_errors_total[5m]) / rate(nft_minted_total[5m]))",
            "legendFormat": "Success Rate"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 }
      },
      {
        "title": "Queue Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "queue_size",
            "legendFormat": "{{queue_name}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 6, "y": 24 }
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
