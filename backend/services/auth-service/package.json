    "@sinclair/typebox": "^0.31.0",
    "@solana/web3.js": "^1.98.4",
    "@tickettoken/shared": "file:../../shared",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "^1.18.2",
    "@types/helmet": "^0.0.48",
    "apple-signin-auth": "^2.0.0",
