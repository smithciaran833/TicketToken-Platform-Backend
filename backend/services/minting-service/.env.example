# Service Configuration
NODE_ENV=development
PORT=3018
SERVICE_NAME=minting-service

# Database
DATABASE_URL=postgresql://tickettoken:CHANGE_ME@localhost:5432/tickettoken_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tickettoken_db
DB_USER=tickettoken
DB_PASSWORD=CHANGE_ME

# Redis
REDIS_URL=redis://:CHANGE_ME@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME

# RabbitMQ
RABBITMQ_URL=amqp://tickettoken:CHANGE_ME@localhost:5672

# JWT
JWT_SECRET=CHANGE_ME

# Internal Service Authentication
INTERNAL_SERVICE_SECRET=CHANGE_ME_minimum_32_characters_required

# Webhook Authentication
WEBHOOK_SECRET=CHANGE_ME_minimum_32_characters_for_webhooks

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
SOLANA_CLUSTER=devnet
WALLET_PATH=./devnet-wallet.json
COLLECTION_MINT=CHANGE_ME_after_collection_deployed
MERKLE_TREE_ADDRESS=CHANGE_ME_after_merkle_tree_created

# IPFS Configuration (Pinata)
IPFS_PROVIDER=pinata
PINATA_API_KEY=CHANGE_ME
PINATA_SECRET_API_KEY=CHANGE_ME
PINATA_JWT=CHANGE_ME
IPFS_GATEWAY=https://gateway.pinata.cloud

# Alternative: NFT.Storage
# IPFS_PROVIDER=nft.storage
# NFT_STORAGE_API_KEY=CHANGE_ME

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Queue Configuration
QUEUE_CONCURRENCY=5
MAX_MINT_RETRIES=3

# Solana Transaction Configuration
TRANSACTION_TIMEOUT=60000
CONFIRMATION_COMMITMENT=confirmed
PRIORITY_FEE_MICROLAMPORTS=1

# Balance Monitoring
MIN_SOL_BALANCE=0.1
BALANCE_CHECK_INTERVAL=300000
