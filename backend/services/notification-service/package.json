{
  "name": "@tickettoken/notification-service",
  "version": "1.0.0",
  "description": "Notification service for TicketToken platform - handles email, SMS, and push notifications",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "seed": "knex seed:run",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate:make": "knex migrate:make --knexfile knexfile.ts -x ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@sendgrid/mail": "^7.7.0",
    "@tickettoken/shared": "file:../../shared",
    "amqplib": "^0.10.9",
    "aws-sdk": "^2.1692.0",
    "bull": "^4.16.5",
    "bullmq": "^5.64.1",
    "dotenv": "^16.6.1",
    "fastify": "^4.29.1",
    "handlebars": "^4.7.8",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.43",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^5.8.2",
    "sharp": "^0.34.3",
    "twilio": "^4.23.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/aws-sdk": "^0.0.42",
    "@types/bull": "^4.10.0",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.2",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "axios": "^1.11.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "types": "dist/index.d.ts"
}
