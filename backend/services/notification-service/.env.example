# ==== Email Configuration ====
SMTP_HOST=smtp.gmail.com                       # SMTP server host
SMTP_PORT=587                                  # SMTP server port
SMTP_SECURE=false                              # Use TLS
SMTP_USER=<EMAIL_ADDRESS>                      # SMTP username
SMTP_PASSWORD=<EMAIL_PASSWORD>                 # SMTP password
EMAIL_FROM=noreply@tickettoken.com            # From email address

# ==== SMS Configuration (Optional) ====
TWILIO_ACCOUNT_SID=<TWILIO_SID>               # Twilio account SID
TWILIO_AUTH_TOKEN=<TWILIO_TOKEN>              # Twilio auth token
TWILIO_PHONE_NUMBER=<TWILIO_PHONE>            # Twilio phone number

# ==== Push Notifications (Optional) ====
FCM_SERVER_KEY=<FCM_KEY>                      # Firebase Cloud Messaging key

# ==== AWS SES Configuration (Alternative to SendGrid) ====
AWS_REGION=us-east-1                          # AWS region for SES
AWS_ACCESS_KEY_ID=<AWS_ACCESS_KEY>            # AWS access key ID
AWS_SECRET_ACCESS_KEY=<AWS_SECRET_KEY>        # AWS secret access key
AWS_SES_FROM_EMAIL=noreply@tickettoken.com   # SES verified sender email

# ==== SendGrid Configuration (Alternative to AWS SES) ====
SENDGRID_API_KEY=<SENDGRID_API_KEY>          # SendGrid API key
SENDGRID_FROM_EMAIL=noreply@tickettoken.com  # SendGrid verified sender

# ==== Notification Configuration ====
NOTIFICATION_MODE=development                  # development | production (affects provider selection)
DATA_RETENTION_DAYS=90                        # Days to retain notification history
AUDIT_RETENTION_DAYS=365                      # Days to retain audit logs

# ==== Compliance & Encryption ====
ENCRYPTION_MASTER_KEY=<CHANGE_TO_SECURE_32_CHAR_KEY>  # Encryption key for PII (min 32 chars)
ENABLE_PII_ENCRYPTION=true                    # Enable PII field encryption

# ==== Optional: Monitoring & Logging ====
LOG_LEVEL=info                                # debug | info | warn | error
LOG_FORMAT=json                               # json | pretty
ENABLE_METRICS=true                          # Enable Prometheus metrics
ENABLE_TRACING=true                          # Enable distributed tracing

# ==== Optional: Feature Flags ====
ENABLE_RATE_LIMITING=true                    # Enable rate limiting
RATE_LIMIT_WINDOW_MS=60000                  # Rate limit window (1 minute)
RATE_LIMIT_MAX_REQUESTS=100                 # Max requests per window

# ==== Rate Limiting Configuration ====
EMAIL_RATE_LIMIT=100                        # Max emails per client per window
EMAIL_RATE_WINDOW_MS=60000                 # Email rate limit window (1 minute)
SMS_RATE_LIMIT=50                           # Max SMS per client per window
SMS_RATE_WINDOW_MS=60000                   # SMS rate limit window (1 minute)
BATCH_RATE_LIMIT=10                        # Max batch operations per client per window
BATCH_RATE_WINDOW_MS=60000                 # Batch rate limit window (1 minute)

