{
  "name": "@tickettoken/api-gateway",
  "version": "1.0.0",
  "description": "TicketToken API Gateway - Production-ready gateway for NFT ticketing platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "setup": "bash scripts/setup.sh",
    "generate-keys": "node scripts/generate-keys.js",
    "dev:watch": "nodemon src/server.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "api-gateway",
    "tickettoken",
    "nft",
    "microservices"
  ],
  "author": "TicketToken Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@tickettoken/shared": "file:../../shared",
    "awilix": "^10.0.2",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "fastify": "^4.24.3",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.5",
    "opossum": "^8.5.0",
    "p-retry": "^6.2.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.19.11",
    "@types/opossum": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "types": "dist/index.d.ts"
}
