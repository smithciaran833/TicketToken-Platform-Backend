      DB_NAME: tickettoken_db
      DB_USER: postgres
      DB_PASSWORD: postgres
      DB_POOL_MAX: 5
      REDIS_HOST: redis
      REDIS_PORT: 6379
      REDIS_URL: redis://redis:6379
      RABBITMQ_URL: amqp://admin:admin@rabbitmq:5672
      AUTH_SERVICE_URL: http://auth-service:3001
