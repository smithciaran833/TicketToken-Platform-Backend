    volumes:
      - ~/tickettoken-secrets:/home/nodejs/tickettoken-secrets:ro
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
      rabbitmq:
        condition: service_healthy
    networks:
      - tickettoken-network

  payment-service:
