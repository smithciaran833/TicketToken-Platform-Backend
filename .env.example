# ============================================
# TICKETTOKEN PLATFORM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# DATABASE CREDENTIALS
# ============================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=tickettoken_db

# Redis
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=
MONGO_DATABASE=tickettoken

# InfluxDB
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=
INFLUXDB_ORG=tickettoken
INFLUXDB_BUCKET=metrics
INFLUXDB_ADMIN_TOKEN=

# ============================================
# JWT SECRETS
# ============================================
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=

# ============================================
# STRIPE PAYMENT KEYS
# ============================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_WEBHOOK_SECRET_VENUE=

# ============================================
# FEATURE FLAGS
# ============================================
# Enable venue royalty split (separate charges and transfers pattern)
# Set to 'true' to enable venue royalty payments via Stripe Connect
# Default: false (uses old destination charges pattern)
ENABLE_VENUE_ROYALTY_SPLIT=false

# ============================================
# SENDGRID EMAIL SERVICE
# ============================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@tickettoken.com
SENDGRID_WEBHOOK_VERIFICATION_KEY=

# ============================================
# TWILIO SMS SERVICE
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_FROM_NUMBER=

# ============================================
# INTERNAL SERVICE AUTHENTICATION
# ============================================
INTERNAL_SERVICE_SECRET=

# ============================================
# NOTES
# ============================================
# To generate strong secrets, use:
# openssl rand -base64 32
#
# For development, you can use simple passwords
# For production, use strong randomly generated secrets
